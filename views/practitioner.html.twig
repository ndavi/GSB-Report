{% extends "layout.html.twig" %}
{% set practitionerMenu = true %}

{% block title %}{{ practitioner.first_name }} {{ practitioner.name }} {% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    <div class="well">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-6 control-label">Nom</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Prénom</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.first_name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Adresse</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.address }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Code postal</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.zip_code }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Ville</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.city }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Type de Médecin </label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.type.name }}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-6 control-label">Coefficient</label>
                <div class="col-sm-6">
                    <p class="form-control-static">{{ practitioner.notoriety_coefficient }}</p>
                </div>
            </div>
        </form>
    </div>
{% endblock %}