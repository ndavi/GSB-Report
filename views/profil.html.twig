{% extends "layout.html.twig" %}

{% block title %}Informations personnelles{% endblock %}

{% block content %}
    
    <h1 class="text-center">Informations personnelles</h1>

    {% if visitorForm %}
        <div class="well">
            {{ form_start(visitorForm, { 'attr':  {
                    'class': 'form-horizontal'
                    }}) }}
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_lastName">Nom</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.lastName) }}
                    {{ form_widget(visitorForm.lastName, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_firstName">Pr√©nom</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.firstName) }}
                    {{ form_widget(visitorForm.firstName, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_address">Adresse</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.address) }}
                    {{ form_widget(visitorForm.address, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_zipCode">Code postal</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.zipCode) }}
                    {{ form_widget(visitorForm.zipCode, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_city">Ville</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.city) }}
                    {{ form_widget(visitorForm.city, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_city">Date d'embauche</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.hiringDate) }}
                    {{ form_widget(visitorForm.hiringDate, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_username">Nom d'utilisateur</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.username) }}
                    {{ form_widget(visitorForm.username, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 col-md-5 control-label required" for="visitor_password">Mot de passe</label>
                <div class="col-sm-5 col-md-3">
                    {{ form_errors(visitorForm.password) }}
                    {{ form_widget(visitorForm.password, { 'attr':  {
                    'class': 'form-control'
                    }}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-md-offset-5 col-sm-3">
                    {{ form_row(visitorForm.save, { 'attr':  {
                    'class': 'btn btn-primary'
                    }}) }}
                </div>
            </div>
            {{ form_end(visitorForm) }}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% else %}
            <p>Error when generating form</p>

        </div>
    {% endif %}
{% endblock %}